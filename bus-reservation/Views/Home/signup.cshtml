@{
    ViewData["Title"] = "signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="account-section bg_img"
         style="background: url(https://script.viserlab.com/viserbus/assets/images/frontend/auth/66869002329471720094722.jpg) bottom left;">
    <span class="spark"></span>
    <span class="spark2"></span>
    <div class="account-wrapper sign-up">
        <div class="account-form-wrapper">
            <div class="account-header">
                <div class="logo mb-4">
                    <a href="https://script.viserlab.com/viserbus">
                        <img src="~/images/logo.png"
                             alt="Logo">
                    </a>
                </div>
            </div>
            <div class="w-100 ">
                <div class="continue-google mb-3">
                    <a class="btn w-100 social-login-btn"
                       href="https://script.viserlab.com/viserbus/user/social-login/google">
                        <span class="google-icon">
                            <img src="~/images/google.png" alt="Google">
                        </span> Register with Google
                    </a>
                </div>
                <div class="continue-facebook mb-3">
                    <a class="btn w-100 social-login-btn"
                       href="https://script.viserlab.com/viserbus/user/social-login/facebook">
                        <span class="facebook-icon">
                            <img src="~/images/facebook.png" alt="Facebook">
                        </span> Register with Facebook
                    </a>
                </div>
                <div class="continue-facebook mb-3">
                    <a class="btn w-100 social-login-btn"
                       href="https://script.viserlab.com/viserbus/user/social-login/linkedin">
                        <span class="facebook-icon">
                            <img src="~/images/linkedin.png" alt="Linkedin">
                        </span> Register with Linkedin
                    </a>
                </div>

                <div class="w-100 another-login mb-4 text-center">
                    <span class="another-login__or">OR</span>
                </div>
                <form class="account-form row verify-gcaptcha disableSubmission"
                      action="https://script.viserlab.com/viserbus/user/register" method="POST">
                    <input type="hidden" name="_token" value="rludQWy9IOTWyuSNMEk9jZyCLESIxJ8R4gFSHtFf"
                           autocomplete="off">
                    <div class="col-sm-6">
                        <div class="form-group form--group">
                            <label class="form-label required" for="firstname">First Name</label>
                            <input class="form--control" name="firstname" type="text" value="" required=""
                                   id="firstname">
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group form--group">
                            <label class="form-label required" for="lastname">Last Name</label>
                            <input class="form--control" name="lastname" type="text" value="" required=""
                                   id="lastname">
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group form--group">
                            <label class="form-label required">E-Mail Address</label>
                            <input class="form--control checkUser" name="email" type="email" value="" required="">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group form--group">
                            <label class="form-label required">Password</label>
                            <input class="form--control " name="password" type="password" required="">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group form--group">
                            <label class="form-label required">Confirm Password</label>
                            <input class="form--control" name="password_confirmation" type="password" required="">
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="mb-3">

                            <script async="" src="./Viserbus - Register_files/roundtrip.js.download"></script>
                            <script async="" src="./Viserbus - Register_files/1eq2tap1m" charset="UTF-8"
                                    crossorigin="*"></script>
                            <script type="text/javascript" async="" charset="utf-8"
                                    src="./Viserbus - Register_files/recaptcha__en.js.download" crossorigin="anonymous"
                                    integrity="sha384-zYfvuq6xV6aLevocYkVfLId59jcIkDZniQX2TsTt9LIa0Tf1ORHFh4oKI1naLgGF"></script>
                            <script src="./Viserbus - Register_files/api.js.download"></script>
                            <div class="g-recaptcha" data-sitekey="6LdPC88fAAAAADQlUf_DV6Hrvgm-pZuLJFSLDOWV"
                                 data-callback="verifyCaptcha">
                                <div style="width: 304px; height: 78px;">
                                    <div>
                                        <iframe title="reCAPTCHA" width="304" height="78" role="presentation"
                                                name="a-rt3doq9q82eq" frameborder="0" scrolling="no"
                                                sandbox="allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation allow-modals allow-popups-to-escape-sandbox allow-storage-access-by-user-activation"
                                                src="./Viserbus - Register_files/anchor.html"></iframe>
                                    </div><textarea id="g-recaptcha-response" name="g-recaptcha-response"
                                                    class="g-recaptcha-response"
                                                    style="width: 250px; height: 40px; border: 1px solid rgb(193, 193, 193); margin: 10px 25px; padding: 0px; resize: none; display: none;"></textarea>
                                </div><iframe style="display: none;"
                                              src="./Viserbus - Register_files/saved_resource(1).html"></iframe>
                            </div>
                            <div id="g-recaptcha-error"></div>
                        </div>
                    </div>

                    <div class="form--group custom--checkbox">
                        <input id="agree" name="agree" type="checkbox" required="">
                        <label for="agree">
                            I agree with <span>
                                <a class="acount-link"
                                   href="https://script.viserlab.com/viserbus/policy/privacy-policy"
                                   target="_blank">Privacy Policy</a>
                                ,
                                <a class="acount-link"
                                   href="https://script.viserlab.com/viserbus/policy/terms-of-service"
                                   target="_blank">Terms of Service</a>
                                ,
                                <a class="acount-link"
                                   href="https://script.viserlab.com/viserbus/policy/ticket-policies"
                                   target="_blank">Ticket Policies</a>
                                ,
                                <a class="acount-link"
                                   href="https://script.viserlab.com/viserbus/policy/refund-policy"
                                   target="_blank">Refund Policy</a>
                            </span>

                        </label>
                    </div>

                    <div class="form--group">
                        <button class="btn btn--base w-100" id="recaptcha" type="submit"> Register</button>
                    </div>

                    <p class="mb-0">
                        Already have an account? <a href="https://script.viserlab.com/viserbus/user/login">Login</a>
                    </p>
                </form>
            </div>

        </div>
    </div>
</section>

<div class="modal fade" id="existModalCenter" role="dialog" aria-labelledby="existModalCenterTitle"
     aria-hidden="true" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="existModalLongTitle">You are with us</h5>
                <button class="btn--close w-auto" data-bs-dismiss="modal" type="button">
                    <i class="las la-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <strong class="text-dark">You already have an account. Please Sign in.</strong>
            </div>
            <div class="modal-footer">
                <button class="btn btn--danger btn--sm w-auto" data-bs-dismiss="modal" type="button">Close</button>
                <a class="btn btn--base btn--sm w-auto"
                   href="https://script.viserlab.com/viserbus/user/login">Login</a>
            </div>
        </div>
    </div>
</div>
